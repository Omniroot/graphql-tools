{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/*"
  ]
}
